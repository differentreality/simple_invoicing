= semantic_form_for @item do |f|
  = f.inputs do
    = f.input :category
    = f.input :subcategory
    = f.input :name
    = f.input :description
    = f.input :stock
    = f.input :code
    = f.input :barcode
    = f.input :price
    = f.input :supplier

  = f.actions do
    = f.action :submit, :as => :input
